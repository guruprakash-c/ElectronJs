{
  "name": "basicapp",
  "version": "1.0.0",
  "description": "Proof of Concept on Electron Js",
  "keywords": [
    "electron",
    "js"
  ],
  "license": "MIT",
  "author": "GuruPrakash C",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron": "^38.4.0"
  },
  "build": {
    "appId": "com.example.basicapp",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "Blog"
    }
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  }
}
